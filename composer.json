{
    "name": "nihilco/NIHIL-Framework",
    "description": "The NIHIL Framework",
    "keywords": ["nf", "nihil framework", "nihil"],
    "homepage": "http://www.nihilframework.com/",
    "type": "project",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://www.nihilframework.com/support/tickets",
		"forum": "https://www.nihilframework.com/support/forums/",
		"wiki": "https://www.nihilframework.com/support/wiki/",
		"irc": "irc://irc.freenode.net/nihilco",
		"source": "https://github.com/nihilco/NIHIL-Framework"
    },
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": "*",
        "yiisoft/yii2-bootstrap": "*",
        "yiisoft/yii2-swiftmailer": "*",
		"authorizenet/authorizenet": "~1.8"
    },
    "require-dev": {
        "yiisoft/yii2-codeception": "*",
        "yiisoft/yii2-debug": "*",
        "yiisoft/yii2-gii": "*",
        "yiisoft/yii2-faker": "*",
		"phpdocumentor/phpdocumentor": "*"
    },
    "config": {
        "process-timeout": 1800
    },
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ],
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
